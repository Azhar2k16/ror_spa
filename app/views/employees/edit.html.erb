<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New person</h1>


<%= turbo_frame_tag "modal" do %>
  <%= tag.div data: { controller: "turbo-modal", action: "turbo:submit-end->turbo-modal#submitEnd keyup@window->turbo-modal#closeWithKeyboard" }, style: "padding: 30px; position: absolute; z-index: 2; right: 10px; top: 10px; width: 400px; border-radius: 6px; background: #d2d6dd;" do %>
    New post
    <%= render "form", employee: @employee %>
    <%= button_tag "Close", data: { action: "turbo-modal#hideModal" }, type: "button", class: "rounded-lg py-3 px-5 bg-red-600 text-white" %>
  <% end %>
<% end %>
  

  <%= link_to 'Back to persons', employees_path, class: "p-5 bg-slate-300 absolute z-10 top-10 right-10 rounded-md w-96 break-words" %>
</div>
